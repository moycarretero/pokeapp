{% extends 'pokemons/BasePokemon.html.twig' %}
 
{% block body %}

    <h2>Listado de Pokemons </h2>
    {% for message in app.flashes('success') %}
    <p>{{ message }}</p>
{% endfor %}
    <div class="row row-cols-1 row-cols-md-2">
        {% for pokemon in pokemons %}
            <div class="col mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{pokemon.imagen}}" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">{{pokemon.nombre}}</h5>
                        <p class="card-text">{{pokemon.descripcion}}</p>
                        <a href="{{ path('show_pokemon', {'id': pokemon.id}) }}" class="btn btn-primary">MÃ¡s Info</a>
                        <a href="{{ path('edit_pokemon', {'id': pokemon.id}) }}" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {% endblock %}
